{
  "restartable": "rs",
  "ignore": [
    ".git/",
    ".husky/",
    "node_modules/**/node_modules",
    "coverage/",
    "dist/",
    "scratch.http",
    "*.test.ts"
  ],
  "verbose": true,
  "execMap": {
    "ts": "ts-node"
  },
  "runOnChangeOnly": false,
  "watch": ["api/**/*.ts"],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "ts,json"
}
